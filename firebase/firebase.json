{
  "hosting": {
    "rewrites": [
      {
        "source": "/api/**",
        "run": {
          "serviceId": "core-service",
          "region": "us-central1"
        }
      },
      {
        "source": "**",
        "run": {
          "serviceId": "frontend-service",
          "region": "us-central1"
        }
      }
    ]
  },
  "emulators": {
    "singleProjectMode": true,
    "auth": {
      "host": "0.0.0.0",
      "port": 9099
    },
    "firestore": {
      "host": "0.0.0.0",
      "port": 8088
    },
    "ui": {
      "host": "0.0.0.0",
      "port": 4000,
      "enabled": true
    }
  }
}
